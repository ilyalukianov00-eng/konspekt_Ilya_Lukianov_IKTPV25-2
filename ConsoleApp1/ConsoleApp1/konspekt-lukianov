            /* Tingimuslause osad */
            if (true) { } //kaitstud s√µna "if" kutsub esile tingimuslause, mille tingimus on sulgude vahel, ning millele j√§rgneb
                          //koodiplokk tingimuse t√§itumisel teostatava koodiga
            else if (true) { } //kaitstud s√µnad "else" ja "if" (else if) kutsuvad esile sekundaarse tingimuslause, mille tingimus
                               //on samamoodi sulgude vahel, ning millele pepab eelnema alat kas "if" v√µi teine "else if". Tingimuse t√§itumisel
                               //ja eelneva tingimuse mittet√§itumisel, teostatakse koodiploki sees olev kood.
            else { } //kaitstud s√µna "else" kutsub esile j√§reltingimuse, millele peab eelnema kas "if" v√µi "else if", ning mille koodiploki sisu
                     //t√§idetakse k√µikide teiste "if" ja "else if" tingimuste l√§bikukkumisel.

            int option = 3; // -------
            switch (option) //"switch" on kaitstud s√µna alternatiivse tingimuskontrolli jaoks mida saab ef else-if asemel kasutada.
                            //Sulgude vahele k√§ib muutuja nimi, mille p√µhjal tingimuslik √ºmberl√ºlitus toimub. Siin sulgude vahel
                            //ei ole tingimus ise, vaid k√µigest kontrollitav muutuja, v√µi omakorda sulgude vahel muu tingimus.
                            //p√§rast l√ºlitusvalikut tuleb koodiplokk.
            {
                case 1:     //koodiploki sees on erinevad juhtumid, juhtumit s√§testatakse kaitsud s√µna "case" abil. antud juhul kontrollitakse,
                            //kas muutujas "option" on v√§√§rtus 1, millele j√§rgned koolon ":" v√§ljendades tingimuse t√§itumisel tehtava
                            //kooditegevuse algust
                    break;  //Kui tegevus on tehtud, v√§ljutakse mitte ainult juhtumist vaid kogu k√§esoleva case-tingimustikust kaitstud
                            //s√µnaga "break". Peale breaki on l√§usel√µpum√§rk ";".
                case 2:     //Juhtumeid v√µib olla mitmeid, antud juhul on neid kolm kindlalt.
                    break;
                case 3:
                    Console.WriteLine(option); //tehtav kooditegevus.
                    break;
                default:    //Default juhtumit t√§idetakse siis, kui √ºlej√§√§nud juhtumid ei kirjelda muutujas "option" olevat seisu.
                    break;  //Ka default l√µppeb s√µnaga break.
            }

            /* s√µne t√∂√∂riistad ja muud tekstiga seotut */
            string alfa = "a\nb";        // \n -> tekitab √ºhe s√µne sisse reamurde, s√µne kus on sees √ºks "\n", omab kahte rida.
            string beta = $"a {alfa} b"; // $  -> lubab kasutada muutjaid loogeliste sulgudega otse teksti sees. On variant
                                         //       formateeritud stringist.

            /* Loogilised tehted */

            // && -> "and" loogiline tehe, mida kasutatakse tingimuste kirjeldamisel, ning mis annab positiivse vastuse (true) juhul kui
            //       m√µlemal pool "&&" m√§rki olevad tingimused on t√§idetud. Kui √ºks neist ei ole, siis annab negatiivse vastuse (false).
            // || -> "or"! loogiline tege, mida kasutatakse tingimuste kirjeldamisel, ning mis annab positiivse vastuse (true) siis kui
            //       v√§hemalt √ºks tingimus on t√§idetud. Negatiivne vastus (false) tagastatakse siis, kui k√µik tingimused on t√§itmata.
            // !  -> "not" loogiline tehe, mida kasutatakse tingimuse tulemuse inverteerimiseks. Tulemus, mis muidu tagastaks (true),
            //       h√º√ºum√§rgi abil tagastab (false), ja vastupidi - tulemus mis muidu tagastaks (false), h√º√ºum√§rgi abil tagastab (true)

            /* V√µrdlusoperaatorid */

            // == -> "on v√µrdne". V√µrdusm√§rkide √ºhel pool olev objekt peab vastama t√§pselt oma olemuselt v√µrdusm√§rkide teise pool oleva
            //       objektiga. ei ole sama nagu √ºks v√µrdusm√§rk, √ºks v√µrdusm√§rk omistab, kaks v√µrdleb.
            // != -> "ei ole v√µrdne". V√µrdusm√§rgi √ºhel pool olev objekt *EI TOHI* olla samal kujul nagu v√µrdusm√§rgi teisel pool olev objekt.
            //       Ta v√µib olla √ºksk√µik mis muul kujul, aga mitte v√µrreldava objektiga samal kujul. V√µrdlusoperaator on kombinatsioon
            //       "on v√µrdne operaatorist, ja loogilisest tehtest "not".
            // >  -> "on suurem kui". M√§rgist vasakul pool olev objekt peaks olema suurem, kui paremal pool olev objekt.
            // <  -> "on v√§iksem kui". M√§rgist vasakul pool olev objekt peaks olema v√§iksem, kui paremal pool olev objekt.
            // >= -> "suuremv√µrdne". M√§rgist vasakul pool olev objekt peaks olema v√§hemalt v√µrdne v√µi suurem kui parempoolne objekt.
            //       V√µrdlusoperaator on kombinatsioon "on v√µrdne" ja "on suurem kui" operaatoritest.
            // <= -> "v√§iksemv√µrdne". M√§rgist vasakul pool olev objekt peaks olema v√§hemalt v√µrdne v√µi v√§iksem kui parempoolne objekt.
            //       V√µrdlusoperaator on kombinatsioon "on v√µrdne" ja "on v√§iksem kui" operaatoritest.

            /* omistusoperaatorid ja kiirtehted */

            int thing = 1;// =  -> √ºksik v√µrdusm√§rk omistab muutuja sisse v√§√§rtuse, mida saab kasutada l√§bi muutuja nime.
            thing += 1;   // += -> v√µrdusm√§rk mille ees on pluss, automaatselt liidab muutujale otsa v√µrdusm√§rgi teisel pool oleva arvu.
                          //       asendab tehet "thing = thing + 1". on kombinatsioon matemaatilisest tehtest "+" ja omistamisest "=".
            thing -= 1;   // -= -> v√µrdusm√§rk mille ees on miinus, automaatselt lauhtab muutujast maha v√µrdusm√§rgi teisel pool oleva arvu.
                          //       asendab tehet "thing = thing - 1". on kombinatsioon matemaatilisest tehtest "-" ja omistamisest "=".
            thing *= 2;   // *= -> v√µrdusm√§rk mille ees on korrutusm√§rk "*", automaatselt korrutab muutuja sisu, v√µrdusm√§rgi teisel pool
                          //       oleva arvu kordi. asendab tehet "thing = thing * 2". on kombinatsioon matemaatilisest tehtest "*" ja
                          //       omistamisest "=".
            thing /= 2;   // /= -> v√µrdusm√§rk mille ees on jagamism√§rk "/", automaatselt jagab muutuja sisu v√µrdusm√§rgi teisel pool oleva
                          //       arvu osadeks. asendab tehet "thing = thing / 2". on kombinatsioon matemaatilisest tehtest "/" ja
                          //       omistamisest "=".
            thing++;      // ++ -> on spetsiifiliselt √ºhe juurde liitmiseks kiirtehe.
            thing--;      // -- -> on spetsiifiliselt √ºhe maha lahutamiseks kiirtehe.

            /* Ts√ºklid */
            // 1. do-while
            int dew = 0;
            do // "do" on kaitstud s√µna, mis alustab do-while ts√ºklit. P√§rst seda on koodiplokk {} ning √ºtleb et tee seda koodi
            {
                dew++;
            } while (dew != 5); //niikaua kuni while j√§rel olevate sulgude vahel tingimus ei t√§itu, k√§ivitatakse eelnev kood uuesti.

            // 2. while
            int i = 1;    //ts√ºklimuutuja mis aitab j√§rge pidada while ts√ºkli toimimisel
            while (i < 5) //"while" on kaitstud s√µna mis alustab while ts√ºkli varianti, ilma "do"-ta, ning vajab alati v√§list
                          //ts√ºklimuutujat. antud juhul on selleks i. Ts√ºkli tingimus, mis peale "while" s√µna on, asub sulgude vahel,
                          //siin kontrollitaksegi ts√ºkli t√∂√∂d, l√§bi kindla tingimuse kasutades ts√ºklimuutujat.
                          // antud juhul ts√ºkkel t√∂√∂tab niikaua, kuni i on v√§iksem kui 5. kui i on sama suur nagu 5, siis ts√ºkkel
                          //katkeb.
            {
                //koodiplokk kus midagi tehakse
                i++;      //ning seej√§rel muudetakse ts√ºklimuutuja "i" olekut. antud juhul liidetakse 1 juurde kiirtehtega "++".
            }
            // 3. for
            int kogus = 6; // muutuja mida ts√ºkkel kasutab oma t√∂√∂ tegemiseks - teisis√µnu, t√∂√∂deldav materjal
            for (int k = 0; k < kogus; k++) // kaitstud s√µnaa "for" alustab for-ts√ºklit, p√§rast mida on sulud, mille vahel on k√µik ts√ºkli
                                             // t√∂√∂ jaoks vajalik olemas. Esimene parameeter, tekitab ts√ºkli t√∂√∂ jaoks kohaliku muutuja
                                             // "int k = 0;" mida ts√ºkli ENDA t√∂√∂ juhtimiseks. Teine parameeter on tingimuslause, mis kontrollib
                                             // tingimuse t√§itumist "k < kogus;" ning mille t√§itumisel ts√ºkli t√∂√∂ j√§tkub, aga mille
                                             // mitte-t√§itumisel ts√ºkkel katkeb. Kolmas parameeter on ts√ºklimuutuja inkrementeerimine kiirtehtega
                                             // "k++". Pane t√§hele, et iga sulgude vahel oleva osa j√§rel (v√§lja arvatud viimase) on
                                             // lausel√µpum√§rk. Ts√ºkli t√∂√∂d kontrolliv tingimuslause koosneb kolmest reast, mitte √ºhest
                                             // nagu "while" v√µi "do-while" puhul.
            {                                // sulgudele j√§rgneb, loogeliste sulgude vahel ole koodiplokk {}
                Console.WriteLine(k);        // t√∂√∂tlustegevus ts√ºkli sees, on muutuja "k" hetkearvu v√§ljakuvamine.
            }
